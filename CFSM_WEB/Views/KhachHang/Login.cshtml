
@model CFSM_WEB.ViewModels.LoginVM;

@{
	ViewData["Title"] = "Login";
	Layout = "/Views/Shared/_LayoutAccount.cshtml";
}
	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100">
				<div class="login100-pic js-tilt" data-tilt>
					<img src="~/srcAccount/images/img-01.png" alt="IMG">
				</div>
				
				<form asp-action="Login" method="post" asp-route-returnurl="@ViewBag.ReturnUrl" class="login100-form validate-form">
					<span class="login100-form-title">
						Member Login
					</span>
				<span class="text-danger">
					@Html.ValidationMessageFor(m => m.UserName)
				</span>
					<div class="wrap-input100 validate-input" data-validate="Valid email is required ">
						<input asp-for="@Model.UserName" class="input100" type="text" placeholder="User">
						<span class="focus-input100"></span>
						<span class="symbol-input100">
						<i class="fa fa-user" aria-hidden="true"></i>
						</span>
					
					</div>

					<div class="wrap-input100 validate-input" data-validate="Password is required">
						<input asp-for="@Model.Password"  class="input100" type="password" placeholder="Password">
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-lock" aria-hidden="true"></i>
						</span>
					</div>
				<span class="text-danger">
					@Html.ValidationMessageFor(m => m.Password)
				</span>
					<div class="container-login100-form-btn">
						<button class="login100-form-btn">
							Login
						</button>
					</div>

					<div class="text-center p-t-12">
						<span class="txt1">
							Forgot
						</span>
						<a class="txt2" href="#">
							Username / Password?
						</a>
					</div>

					<div class="text-center p-t-136">
						<a class="txt2" asp-action="Register" asp-controller="KhachHang">
							Create your Account
							<i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
						</a>
					</div>
				</form>
			</div>
		</div>
	</div>



