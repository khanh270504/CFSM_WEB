@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<TDoAn>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
		<div class="row d-md-flex">
			<div class="col-lg-12 ftco-animate p-md-5 fadeInUp ftco-animated">
				<div class="row">
					<div class="col-md-12 nav-link-wrap mb-5">
						<div class="nav ftco-animate nav-pills justify-content-center fadeInUp ftco-animated" id="v-pills-tab" role="tablist" aria-orientation="vertical">
							@await Component.InvokeAsync("Menu")
						</div>
					</div>
					<div class="col-md-12 d-flex align-items-center">
						<div class="col-md-12 tab-content ftco-animate fadeInUp ftco-animated" id="v-pills-tabContent">
					<div class="tab-pane fade show active d-flex flex-wrap" id="v-pills-1" role="tabpanel" aria-labelledby="v-pills-1-tab">
						@foreach(var doAn in Model)
								{
								<div class="col-md-4 text-center">
									<div class="menu-wrap">
									<a asp-controller="Home" asp-action="ChiTietDoAn" asp-route-maDoAn="@doAn.MaDoAn" class="menu-img img mb-4" style="background-image: url(@Url.Content("../ImagesMenu/" + doAn.AnhDoAn));"></a>
										<div class="text">
											<h3><a asp-controller="Home" asp-action="ChiTietDoAn" asp-route-maDoAn="@doAn.MaDoAn">@doAn.TenDoAn</a></h3>
											<p>@doAn.MoTaDoAn</p>
											<p class="price"><span>@doAn.DonGia vnd</span></p>
										<p><a asp-action="AddToCart" asp-controller="Cart" asp-route-id="@doAn.MaDoAn" class="btn btn-primary btn-outline-primary">Add to cart</a></p>
										</div>
									</div>
								</div>	
								}															
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

