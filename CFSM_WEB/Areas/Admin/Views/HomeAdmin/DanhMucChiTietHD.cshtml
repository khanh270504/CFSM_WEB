@{
    ViewData["Title"] = "DanhMucChiTietHD";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@using CFSM_WEB.Models;
@model List<TChiTietHd>

<h1>Danh sách hóa đơn</h1>

@if (Model == null || !Model.Any())
{
    <p>Không có chi tiết hóa đơn nào để hiển thị.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Mã hóa đơn</th>
                <th>Mã chi tiết hóa đơn</th>
                <th>Tên sản phẩm</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
                <th>Tổng tiền</th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 0;
            }
            @foreach (var item in Model)
            {
                string cls = i % 2 == 0 ? "table-warning" : "table-danger";
                i++;
                <tr class="@cls">
                    <td>@item.MaHoaDon</td>
                    <td>@item.MaCthd</td>
                    <td>@item.MaDoAnNavigation?.TenDoAn</td>
                    <td>@item.SoLuong</td>
                    <td>@item.DonGia</td>
                    <td>@item.TongTien</td>                    
                </tr>
            }
        </tbody>
    </table>
}
